# ============================================================================
# STRING EXTENSIONS
# ============================================================================

# In Somnia, these are methods on string but implemented natively
native fun string_starts_with(s: string, prefix: string) -> bool
native fun string_ends_with(s: string, suffix: string) -> bool
native fun string_substring(s: string, start: number) -> string
native fun string_split(s: string, delimiter: string) -> list
native fun string_length(s: string) -> number

# String method wrappers
extend string {
    method starts_with(prefix: string) -> bool {
        return string_starts_with(self, prefix)
    }
    
    method ends_with(suffix: string) -> bool {
        return string_ends_with(self, suffix)
    }
    
    method substring(start: number) -> string {
        return string_substring(self, start)
    }
    
    method split(delimiter: string) -> list {
        return string_split(self, delimiter)
    }
}

# ============================================================================
# LIST EXTENSIONS
# ============================================================================

native fun list_length(l: list) -> number

# List function (built-in)
fun len(value: any) -> number {
    var t = native_type(value)
    when t == "string" => return string_length(value)
    when t == "list" => return list_length(value)
    when t == "map" => return list_length(native_keys(value))
    return 0
}

# Range generator
fun range(start: number, end: number) -> list {
    var result = []
    var i = start
    while i < end {
        result = result + [i]
        i = i + 1
    }
    return result
}

# ============================================================================
# MATH NATIVES
# ============================================================================

native fun math_pow(base: number, exp: number) -> number
native fun math_sqrt(n: number) -> number
native fun math_abs(n: number) -> number
native fun math_floor(n: number) -> number
native fun math_ceil(n: number) -> number
native fun math_random() -> number

fun pow(base: number, exp: number) -> number {
    return math_pow(base, exp)
}

fun sqrt(n: number) -> number {
    return math_sqrt(n)
}

fun abs(n: number) -> number {
    return math_abs(n)
}

fun floor(n: number) -> number {
    return math_floor(n)
}

fun ceil(n: number) -> number {
    return math_ceil(n)
}

