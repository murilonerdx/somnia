{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Somnia",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords-control"
		},
		{
			"include": "#keywords-entities"
		},
		{
			"include": "#keywords-verbs"
		},
		{
			"include": "#keywords-decl"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"end": "$",
					"name": "comment.line.double-slash.somnia"
				}
			]
		},
		"keywords-control": {
			"patterns": [
				{
					"match": "\\b(id|ego|act|when)\\b",
					"name": "keyword.control.somnia"
				}
			]
		},
		"keywords-entities": {
			"patterns": [
				{
					"match": "\\b(drive|affect|trace|archetype)\\b",
					"name": "storage.type.class.somnia"
				}
			]
		},
		"keywords-verbs": {
			"patterns": [
				{
					"match": "\\b(propose|forbid|require|select|top|beam|sample|run)\\b",
					"name": "support.function.somnia"
				}
			]
		},
		"keywords-decl": {
			"patterns": [
				{
					"match": "\\b(intent|action)\\b",
					"name": "entity.name.function.somnia"
				}
			]
		},
		"strings": {
			"begin": "\"",
			"end": "\"",
			"name": "string.quoted.double.somnia"
		},
		"constants": {
			"patterns": [
				{
					"match": "\\b\\d+(\\.\\d+)?\\b",
					"name": "constant.numeric.somnia"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"match": "(@|->|=>|\\:|\\.|\\.|\\[|\\])",
					"name": "keyword.operator.somnia"
				}
			]
		}
	},
	"scopeName": "source.somnia"
}