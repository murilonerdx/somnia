{
    "name": "somnia",
    "displayName": "Somnia Language",
    "version": "0.0.1",
    "publisher": "local",
    "engines": {
        "vscode": "^1.85.0"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:somni"
    ],
    "contributes": {
        "languages": [
            {
                "id": "somni",
                "aliases": [
                    "Somni",
                    "Somnia"
                ],
                "extensions": [
                    ".somni"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "somni",
                "scopeName": "source.somni",
                "path": "./syntaxes/somni.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "somni",
                "path": "./snippets/somni.json"
            }
        ]
    },
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -watch -p ."
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.4.0"
    }
}