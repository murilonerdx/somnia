{
    "scopeName": "source.somni",
    "patterns": [
        {
            "name": "comment.line.double-slash.somni",
            "match": "//.*$"
        },
        {
            "name": "keyword.control.somni",
            "match": "\\b(id|ego|act|drive|affect|trace|archetype|when|propose|forbid|require|select|beam|top|sample|intent|action|run|expose|as)\\b"
        },
        {
            "name": "constant.numeric.somni",
            "match": "\\b\\d+(?:\\.\\d+)?\\b"
        },
        {
            "name": "string.quoted.double.somni",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "keyword.operator.somni",
            "match": "(->|=>|@|,|\\{|\\}|\\(|\\))"
        },
        {
            "name": "keyword.operator.word.somni",
            "match": "\\b(and|or|not|where)\\b"
        }
    ]
}